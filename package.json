{
  "name": "fts-npm-scripts",
  "version": "1.0.0",
  "description": "",
  "main": "js/index.js",
  "scripts": {
    "scss-watch": "sass --watch src/scss/manifest.scss:dist/styles.css",
    "copy-to-dist-watch": "cpx \"src/**/*.{php,png,jpg}\" dist --watch",
    "server": "php -S localhost:8080",
    "watchify": "watchify js/index.js -o dist/index.js -t [ babelify --presets [ es2015 ] ]",
    "start": "npm-run-all scss-watch server copy-to-dist-watch watchify",
    "babelify": "browserify js/index.js -o dist/index.js -t [ babelify --presets [ es2015 ] ]",
    "scss": "sass src/scss/manifest.scss:dist/styles.css",
    "process-css": "postcss --use autoprefixer --use cssnano -b 'last 2 versions' dist/styles.css -o dist/styles.css",
    "copy-to-dist": "cpx \"src/**/*.{php,png,jpg}\" dist",
    "uglify": "uglifyjs dist/index.js",
    "dist": "npm-run-all scss process-css copy-to-dist babelify uglify"
  },
  "author": "Fresh Tilled Soil",
  "license": "ISC",
  "devDependencies": {
    "autoprefixer": "^6.5.3",
    "babel-preset-es2015": "^6.18.0",
    "babelify": "^7.3.0",
    "cpx": "^1.5.0",
    "cssnano": "^3.8.0",
    "imagemin": "^5.2.2",
    "imagemin-cli": "^3.0.0",
    "node-sass": "^3.11.2",
    "npm-run-all": "^3.1.1",
    "postcss-cli": "^2.6.0",
    "svgo": "^0.7.1",
    "uglifyjs": "^2.4.10",
    "watchify": "^3.7.0"
  },
  "dependencies": {}
}
